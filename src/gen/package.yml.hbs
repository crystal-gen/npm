name: {{{@name}}}
version: {{{@version}}}

{{#if @description}}
description: '{{{@description}}}'
{{/if}}

{{#if @author}}
author: '{{{@author.name}}} <{{{@author.email}}}>'
{{/if}}

{{#if bugs}}
bugs:
  {{#if bugs.url}}
  url: {{bugs.url}}
  {{/if}}
  {{#if bugs.email}}
  email: {{bugs.email}}
  {{/if}}
{{/if}}

{{#if license}}
license: {{license}}
{{/if}}

{{#if homepage}}
homepage: '{{{homepage}}}'
{{/if}}

{{#if private}}
private: true
{{/if}}

{{#if bin}}
bin:
  {{#each bin}}
  {{{@key}}}: '{{{this}}}'
  {{/each}}
{{/if}}

{{#if dependencies}}
dependencies:
  {{#each dependencies}}
  {{{@key}}}: '{{{this}}}'
  {{/each}}
{{/if}}

{{#if devDependencies}}
devDependencies:
  {{#each devDependencies}}
  {{{@key}}}: '{{{this}}}'
  {{/each}}
{{/if}}

{{#if keywords}}
keywords:
  {{#each keywords}}
  - {{{this}}}
  {{/each}}
{{/if}}

{{#if main}}
main: {{{main}}}
{{/if}}

{{#if cpu}}
cpu:
  {{#cpu}}
  - {{{this}}}
  {{/cpu}}
{{/if}}

{{#if os}}
os:
  {{#os}}
  - {{{this}}}
  {{/os}}
{{/if}}

{{#if @repository}}
repository:
  type: {{{@repository.type}}}
  url: '{{{@repository.url}}}'
{{/if}}

{{#if scripts}}
scripts:
  {{#each scripts}}
  {{{@key}}}: '{{{this}}}'
  {{/each}}
{{/if}}