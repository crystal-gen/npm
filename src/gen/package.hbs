{
	
	"name": "{{{@name}}}",
	"version": "{{{@version}}}"
	
	{{#if @description}}
	,"description": "{{{@description}}}"
	{{/if}}
	
	{{#if @author}}
	,"author": "{{{@author.name}}} <{{{@author.email}}}>"
	{{/if}}
	
	{{#if license}}
	,"license": "{{license}}"
	{{/if}}
	
	{{#if homepage}}
	,"homepage": "{{{homepage}}}"
	{{/if}}
	
	{{#if private}}
	,"private": true
	{{/if}}
	
	{{#if bin}}
	,"bin": {
		{{#bin}}
		"{{{name}}}": "{{{path}}}"{{#unless @last}},{{/unless}}
		{{/bin}}
	}
	{{/if}}
	
	{{#if dependencies}}
	,"dependencies": {
		{{#dependencies}}
		"{{{name}}}": "{{{version}}}"{{#unless @last}},{{/unless}}
		{{/dependencies}}
	}
	{{/if}}
	
	{{#if devDependencies}}
	,"devDependencies": {
		{{#devDependencies}}
		"{{{name}}}": "{{{version}}}"{{#unless @last}},{{/unless}}
		{{/devDependencies}}
	}
	{{/if}}
	
	{{#if keywords}},
	,"keywords": [
		{{#keywords}}
		"{{{keyword}}}"{{#unless @last}},{{/unless}}
		{{/keywords}}
	]
	{{/if}}
	
	{{#if @repository}}
	,"repository": {
		"type": "{{{@repository.type}}}",
		"url": "{{{@repository.url}}}"
	}
	{{/if}}

}