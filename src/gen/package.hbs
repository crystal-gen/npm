{
	
	"name": "{{{@name}}}",
	"version": "{{{@version}}}",
	"description": "{{{@description}}}",
	{{#if @author}}
	"author": "{{{@author.name}}} <{{{@author.email}}}>",
	{{/if}}
	{{#if homepage}}
	"homepage": "{{{homepage}}}",
	{{/if}}
	
	{{#if bin}}
	"bin": {
		{{#bin}}
		"{{{name}}}": "{{{path}}}"{{#unless @last}},{{/unless}}
		{{/bin}}
	},{{/if}}
	
	"dependencies": {
		{{#dependencies}}
		"{{{name}}}": "{{{version}}}"{{#unless @last}},{{/unless}}
		{{/dependencies}}
	}{{#if devDependencies}},
	"devDependencies": {
		{{#devDependencies}}
		"{{{name}}}": "{{{version}}}"{{#unless @last}},{{/unless}}
		{{/devDependencies}}
	}{{/if}}{{#if license}},
	
	"license": "{{license}}"{{/if}}{{#if keywords}},
	
	"keywords": [
		{{#keywords}}
		"{{{keyword}}}"{{#unless @last}},{{/unless}}
		{{/keywords}}
	]{{/if}}{{#if @repository}},
	
	"repository": {
		"type": "{{{@repository.type}}}",
		"url": "{{{@repository.url}}}"
	}
	{{/if}}

}