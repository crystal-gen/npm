{
	
	"name": "{{{@name}}}",
	"version": "{{{@version}}}",
	"description": "{{{@description}}}",
	
	"dependencies": {
		{{#dependencies}}
		"{{{name}}}": "{{{version}}}"{{#unless @last}},{{/unless}}
		{{/dependencies}}
	}{{#if devDependencies}},
	"devDependencies": {
		{{#devDependencies}}
		"{{{name}}}": "{{{version}}}"{{#unless @last}},{{/unless}}
		{{/devDependencies}}
	}{{/if}}{{#if @repository}},
	
	"repository": {
		"type": "{{{@repository.type}}}",
		"url": "{{{@repository.url}}}"
	}
	{{/if}}

}